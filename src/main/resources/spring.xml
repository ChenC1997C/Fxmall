<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


        <!--只扫描@Component，不能扫描@Mapper-->
        <context:component-scan base-package="com.qianfeng.fxmall.goods.service,com.qianfeng.fxmall.goods.dao"/>
        <!--扫描@Mapper文件-->
        <bean id="mapperScan" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
                <property name="basePackage" value="com.qianfeng.fxmall.goods.mapper"/>
        </bean>


        <!--配置连接池-->
        <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
                <!--value一盘是字符串数据赋值-->
                <!--ref一般关联的是一个对象，需要new创建的对象-->
                <property name="driverClass" value="com.mysql.jdbc.Driver"/>
                <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/fxmall"/>
                <property name="user" value="root"/>
                <property name="password" value="chen1997"/>
        </bean>

        <bean id="sessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
                <!--配置数据源、连接池-->
                <property name="dataSource" ref="dataSource"/>
                <property name="mapperLocations" value="mapper/goods.mapper.xml"/>
        </bean>




</beans>